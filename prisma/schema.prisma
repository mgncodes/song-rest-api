generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Song {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  language    String
  releaseYear Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}